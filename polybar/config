[colors]
background = ${xrdb:polybar.background:#ffffff}
foreground = ${xrdb:polybar.foreground:#ffffff}
black      = ${xrdb:polybar.color0:#ffffff}
red        = ${xrdb:polybar.color1:#ffffff}
green      = ${xrdb:polybar.color2:#ffffff}
yellow     = ${xrdb:polybar.color3:#ffffff}
blue       = ${xrdb:polybar.color4:#ffffff}
magenta    = ${xrdb:polybar.color5:#ffffff}
cyan       = ${xrdb:polybar.color6:#ffffff}
white      = ${xrdb:polybar.color7:#ffffff}

;
; Setup Bars
;

[bar/base]
width = 100%
height = 27
fixed-center = true
line-size = 3
offset-x = 0
offset-y = 0
background = ${colors.background}
foreground = ${colors.foreground}
font-0 = Noto Sans:size=10;2
font-1 = Material Icons:size=12;4


[bar/primary]
inherit = bar/base
module-margin-left = 5
modules-left = workspace music
modules-center = title
modules-right = packages volume date

;
; Setup modules
;
[module/date]
type = internal/date
interval = 60.0

date = %A %B %d, %Y
time = %I:%M %p

label = %date% %time%
label-underline = ${colors.green}


[module/music]
type = custom/script
interval = 2
label = %output:0:45:...%
label-underline = ${colors.white}
exec = ~/.config/polybar/music
click-left = playerctl previous
click-middle = playerctl play-pause
click-right = playerctl next


[module/packages]
type = custom/script
interval = 1200
format = <label>
label = %output:0:30%
format-underline = ${colors.blue}
exec = ~/.config/polybar/packages


[module/padding]
type = custom/text
content = |
content-foreground = ${colors.background}
content-background = ${colors.background}


[module/title]
type = internal/xwindow
label = %title:0:50:...%
label-underline = ${colors.cyan}


[module/volume]
type = internal/volume

format-muted = <label-muted>
label-muted = 
label-muted-underline = ${colors.black}

format-volume = <label-volume>
label-volume =  %percentage%%
label-volume-underline = ${colors.white}


[module/workspace]
type = internal/i3
pin-workspaces = false
index-sort = true
enable-click = false
enable-scroll = false

format = <label-state>

label-focused = %name%
label-focused-padding = 1
label-focused-underline = ${colors.red}

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-underline = ${colors.yellow}

label-urgent = %index%
label-urgent-background = ${colors.red}
label-urgent-foreground = ${colors.background}
label-urgent-padding = 1
label-urgent-underline = ${colors.red}

label-visible = %name%
label-visible-padding = 1
label-visible-underline = ${colors.yellow}

